{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "\\.(e2e-spec|vo\\.spec|acceptance\\.spec)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(uuid|@nestjs|kafkajs)/)"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFiles": ["<rootDir>/test/jest.setup.js"],
  "globals": {
    "ts-jest": {
      "useESM": false,
      "tsconfig": {
        "module": "commonjs"
      }
    }
  }
}
